<h1>Lista de Razas</h1>

<div class="row">
    <div class="col-sm-9">
        <p>Aqui se listan las Razas Registradas.</p>
    </div>
    <div class="col-sm-3">
        <a href="/CrearRaza" class="btn btn-block btn-success">
           Crear Raza
       </a>
    </div>
</div>
<br>


<% for(var i=0; i<razas.length; i++) {%>
    <div class="row ma-margen-top-bottom">
        <div class="col-sm-1"></div>
        <div class="col-sm-4">
            <div class="text-center ma-borde ma-padding-top-bottom">
                <h1> <%= razas[i].nombre %></h1>
            </div>
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-5 text-center">
            <div class="text-center ma-borde" style="margin-top: 40px;">
                <p>
                    <%= razas[i].nombre %>
                </p>
            </div>
        </div>
        <div class="col-sm-1">
            <a href="/Raza/borrarRaza?id=<%= razas[i].id %>" class="btn btn-danger btn-block">Borrar</a>
            <a href="/editarRazaRuta?id=<%= razas[i].id %>" class="btn btn-info btn-block">Editar</a>

        </div>
    </div>
    <% }%>
