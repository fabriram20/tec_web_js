<h2>Crear Mascota</h2>

<form action="/Mascota/crearMascota" method="post">

    <div class="form-group">
        <label >Nombre</label>
        <input type="text" class="form-control" placeholder="Ingrese su Nombre" name="nombre">
    </div>

    <div class="form-group">
        <label>Fecha de Nacimiento</label>
        <input type="date" class="form-control" placeholder="Ingrese su Fecha de Nacimiento" name="fechaNacimiento">
    </div>

    <div class="form-group">
        <label>Raza</label>
        <select class="form-control" name="idRaza">
            <% for(var i=0; i<razas.length; i++){ %>
                <option value='<%= razas[i].id %>'>
                    <%= razas[i].nombre %>
                </option>
                <%  } %>
        </select>

    </div>

    <div class="form-group">
        <label>Pais de Nacimiento</label>
        <select class="form-control" name="paisNacimiento">
            <option value='Ecuador'>Ecuador</option>
            <option value='Colombia'>Colombia</option>
            <option value='Peru'>Per√∫</option>
        </select>

    </div>

    <button type="submit" class="btn btn-success">Crear Mascota</button>
</form>
